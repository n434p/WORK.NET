<Window x:Class="DLLConstructor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DLLConstructor" Height="286" Width="334" SizeToContent="WidthAndHeight" Grid.IsSharedSizeScope="True">
    <Grid Margin="0,0,0,-1" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left" Width="324">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="StackPanel">
            <Label Content="Class Name:"/>
            <TextBox x:Name="textClass" Height="23" TextWrapping="Wrap"/>
            <Label Content="Fields number:"/>
            <ComboBox x:Name="numFields" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        </StackPanel>
        <StackPanel x:Name="StackVarPanel" Margin="0,151,0,20" HorizontalAlignment="Left" Width="324"/>


    </Grid>
</Window>
