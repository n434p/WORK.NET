        <Label Content="Press" HorizontalAlignment="Left" Margin="176,239,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="dbPress" HorizontalAlignment="Left" Margin="176,265,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="ADD ITEM" HorizontalAlignment="Left" Margin="80,327,0,0" VerticalAlignment="Top" Width="184" RenderTransformOrigin="0.44,-0.364" Click="Button_Click_1"/>

    </Grid>
